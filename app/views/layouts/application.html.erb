      <script src="//cdnjs.cloudflare.com/ajax/libs/html5shiv/r29/html5.min.js"></script>
    <![endif]-->
  </head>

  <body>
    <header class="navbar navbar-fixed-top navbar-inverse" id="header">
      <div class="container">
        <%= link_to "sample app", '#', id: "logo" %>
      </div>
    </header>
    <%= yield %>
  </body>
</html>
